component Main {
  state name : String = "Joe"
  state age : Number = 24

  fun test : Promise(Never, Void) {
    next {
      name = "Hello",
      age=30
    }
  }

  fun render : Html {
    <div/>
  }
}
-------------------------------------------------------NextCallInvalidInvocation
module Test {
  fun test : Promise(Never, Void) {
    next { age = 30 }
  }
}

component Main {
  fun render : Html {
    <div/>
  } where {
    test = Test.test()
  }
}
-------------------------------------------------------NextCallStateTypeMismatch
component Main {
  state name : String = "Joe"

  fun render : Html {
    try {
      next { name = 30 }

      <div/>
    }
  }
}
-----------------------------------------------------------NextCallStateNotFound
component Main {
  state name : String = "Joe"

  fun render : Html {
    try {
      next { age = 30 }

      <div/>
    }
  }
}
