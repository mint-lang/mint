module Promise {
  fun reject (input : a) : Promise(a, b) {
    ``
  }
}

component Main {
  fun test : Promise(Never, String) {
    parallel {
      greeting =
        Promise.reject("hello")

      blah =
        Promise.reject(0)
    } then {
      "true"
    } catch String => a {
      "hello"
    } catch Number => a {
      "hello"
    }
  }

  fun render : Html {
    <div/>
  }
}
-------------------------------------------------------------ParallelDidNotCatch
module Promise {
  fun reject (input : a) : Promise(a, b) {
    ``
  }
}

component Main {
  fun test : Promise(Never, Bool) {
    parallel {
      greeting =
        Promise.reject("hello")

      blah =
        Promise.reject(0)
    } then {
      true
    }
  }

  fun render : Html {
    <div/>
  }
}
----------------------------------------------------------ParallelCatchesNothing
component Main {
  fun test : Promise(Never, Bool) {
    parallel {
      true
    } then {
      true
    } catch String => error {
      false
    }
  }

  fun render : Html {
    <div/>
  }
}
-------------------------------------------------------ParallelCatchTypeMismatch
