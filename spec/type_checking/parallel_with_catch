--------------------------------------------------------------ParallelCaughtAll
module Promise {
  fun reject (input : a) : Promise(a, b) {
    ``
  }
}

component Main {
  fun test : Promise(Never, Bool) {
    parallel {
      blah =
        Promise.reject(0)

    } then {
      true
    } catch Number => error {
      false
    } catch {
      false
    }
  }

  fun render : Html {
    <div/>
  }
}
