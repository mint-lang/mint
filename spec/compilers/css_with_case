component Main {
  style test {
    color: yellow;

    case ("a") {
      "a" =>
        color: red;

      =>
        color: blue;
    }
  }

  fun render : Html {
    <div::test/>
  }
}
--------------------------------------------------------------------------------
class A extends _C {
  $test_HASH_ID() {
    const _ = {};

    (() => {
      let a = `a`;

      if (_compare(a, `a`)) {
        Object.assign(_, {
          [`--a-a`]: `red`
        })
      } else {
        Object.assign(_, {
          [`--a-a`]: `blue`
        })
      };
    })();

    return _;
  }

  render() {
    return _h("div", {
      className: `test_HASH_ID`,
      style: _style([this.$test_HASH_ID()])
    });
  }
};

A.displayName = "Main";

_insertStyles(`
.test_HASH_ID {
  color: var(--a-a, yellow);
}
`);
