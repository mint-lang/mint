component Main {
  style test {
    div {
      color: #{color};
    }

    @media (screen) {
      color: #{color};
    }
  }

  get color : String {
    "blue"
  }

  fun render : Html {
    <div::test/>
  }
}
--------------------------------------------------------------------------------
class A extends _C {
  $test_HASH_ID() {
    const _ = {
      [`--a-a`]: this.a,
      [`--b-a`]: this.a
    };

    return _;
  }

  get a() {
    return `blue`;
  }

  render() {
    return _h("div", {
      className: `test_HASH_ID`,
      style: _style([this.$test_HASH_ID()])
    });
  }
};

A.displayName = "Main";

_insertStyles(`
.test_HASH_ID div {
  color: var(--a-a);
}

@media (screen) {
  .test_HASH_ID {
    color: var(--b-a);
  }
}
`);
