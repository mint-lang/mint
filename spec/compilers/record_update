type Record {
  name: String
}

component Main {
  state record : Record = { name: "Doe" }

  fun render : Html {
    { record | name: "John" }
    <div/>
  }
}
--------------------------------------------------------------------------------
import {
  createElement as B,
  useSignal as A
} from "./runtime.js";

export const C = () => {
  const a = A({
    name: `Doe`
  });
  {
    ...a.value,
    name: `John`
  };
  return B(`div`, {})
};
