component Main {
  style test {
    color: yellow;

    @media (max-width: 300px) {
      if (true) {
        color: red;
      }
    }
  }

  fun render : Html {
    <div::test/>
  }
}
--------------------------------------------------------------------------------
---=== /index.js ===---
import {
  createElement as B,
  style as C
} from "runtime";

export const A = () => {
  const a = () => {
    const _ = {};
    (true ? Object.assign(_, {
      [`--a-a`]: `red`
    }) : null);
    return _
  };
  return B(`div`, {
    className: `Main_test`,
    style: C([a()])
  })
};

---=== /index.css ===---
.Main_test {
  color: yellow;
}

@media (max-width: 300px) {
  .Main_test {
    color: var(--a-a);
  }
}
