component Main {
  style test (color : String) {
    color: #{color};
  }

  fun render : Html {
    <div::test("red")>
    </div>
  }
}
--------------------------------------------------------------------------------
import {
  createElement as C,
  useFunction as B,
  style as D
} from "runtime";

const A = () => {
  const a = B((b) => {
    const _ = {
      [`--a-a`]: b
    };
    return _
  });
  return C(`div`, {
    className: `Main_test`,
    style: D([a(`red`)])
  })
};

.Main_test {
  color: var(--a-a);
}
