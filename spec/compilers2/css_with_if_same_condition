component Main {
  style test {
    .tag {
      if (true) {
        color: red;
      } else {
        color: blue;
      }
    }

    .string {
      if (true) {
        color: yellow;
      } else {
        color: cyan;
      }
    }
  }

  fun render : Html {
    <div::test/>
  }
}
--------------------------------------------------------------------------------
import {
  createElement as C,
  useFunction as B,
  style as D
} from "runtime";

const A = () => {
  const a = B(() => {
    const _ = {};
    (true ? Object.assign(_, {
      [`--a-a`]: `red`
    }) : Object.assign(_, {
      [`--a-a`]: `blue`
    }));
    (true ? Object.assign(_, {
      [`--b-a`]: `yellow`
    }) : Object.assign(_, {
      [`--b-a`]: `cyan`
    }));
    return _
  });
  return C(`div`, {
    className: `Main_test`,
    style: D([a()])
  })
};

.Main_test .tag {
  color: var(--a-a);
}

.Main_test .string {
  color: var(--b-a);
}
