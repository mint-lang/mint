module Test {
  fun factorial(n : Number) : Number {
    let helper = (n : Number, acc : Number) : Number {
      if (n == 0) {
        acc
      } else {
        helper(n - 1, acc * n)
      }
    }

    helper(n, 1)
  }
}

component Main {
  fun render : String {
    Test.factorial(3)

    ""
  }
}
--------------------------------------------------------------------------------
import { compare as A } from "runtime";

const
  a = (b) => {
    const c = (d, e) => {
      return (A(d, 0) ? e : c(d - 1, e * d))
    };
    return c(b, 1)
  },
  B = () => {
    a(3);
    return ``
  };
