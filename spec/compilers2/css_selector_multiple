component Main {
  style test {
    div {
      color: #{color};
    }

    &:focus,
    &:hover {
      color: red;
    }
  }

  get color : String {
    "blue"
  }

  fun render : Html {
    <div::test/>
  }
}
--------------------------------------------------------------------------------
import {
  createElement as D,
  useFunction as C,
  useComputed as B,
  style as E
} from "runtime";

const A = () => {
  const
    a = B(() => {
      return `blue`
    }),
    b = C(() => {
      const _ = {
        [`--a-a`]: a.value
      };
      return _
    });
  return D(`div`, {
    className: `Main_test`,
    style: E([b()])
  })
};

.Main_test div {
  color: var(--a-a);
}

.Main_test:focus {
  color: red;
}

.Main_test:hover {
  color: red;
}
