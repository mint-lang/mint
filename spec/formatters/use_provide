type Context {
  name : String
} context {
  name: "Joe"
}

component Consumer {
  context ctx : Context

  fun render {
    ctx.name
  }
}

component Test {
  provide Context {
    name: "Joe"
  }

  fun render : Html {
    <Consumer/>
  }
}
--------------------------------------------------------------------------------
type Context {
  name : String
} context { name: "Joe" }

component Consumer {
  context ctx : Context

  fun render {
    ctx.name
  }
}

component Test {
  provide Context { name: "Joe" }

  fun render : Html {
    <Consumer/>
  }
}
