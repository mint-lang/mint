  fun render : Html {
    <Test/>
  }
}
---------------------------------------------------------property_type_mismatch
record A {
  a : String
}

component Test {
  property name : Test = { a: "Hello" }

  fun render : Html {
    <div/>
  }
}

component Main {
  fun render : Html {
    <Test/>
  }
}
------------------------------------------------property_type_or_default_needed
component Test {
  property name

  fun render : Html {
    <div/>
  }
}

component Main {
  fun render : Html {
    <Test/>
  }
}
