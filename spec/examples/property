  fun render : Html {
    <Test/>
  }
}
---------------------------------------------------------property_type_mismatch
component Test {
  property name : Test(a) = true

  fun render : Html {
    <div/>
  }
}

component Main {
  fun render : Html {
    <Test/>
  }
}
---------------------------------------------------property_with_type_variables
