  fun render : Html {
    <Test/>
  }
}
---------------------------------------------------------property_type_mismatch
type A {
  a : String
}

component Test {
  property name : Test = { a: "Hello" }

  fun render : Html {
    <div/>
  }
}

component Main {
  fun render : Html {
    <Test/>
  }
}
