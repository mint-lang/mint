record Provider.Data {
  a : String,
  b : String
}

provider Provider : Provider.Data {
  fun attach : Void {
    void
  }
}

component Main {
  use Provider {
    a: "Hello",
    b: "Blah"
  } when {
    true
  }

  fun render : Html {
    <div/>
  }
}
