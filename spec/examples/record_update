-------------------------------------------------------------------------------
record Test {
  a : String,
  b : Number
}

component Main {
  fun test : Test {
    let x =
      {
        a: "Blah",
        b: 1
      }

    { x |
      a: "Hello",
      b: 0
    }
  }

  fun render : String {
    test()

    ""
  }
}
