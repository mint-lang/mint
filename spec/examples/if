----------------------------------------------------------if_else_type_mismatch
component Main {
  fun render : String {
    if ("a" == "b") {
      "x"
    } else {
      10
    }
  }
}
----------------------------------------------------------if_else_type_mismatch
enum T {
  A(String)
  B(Number)
}

component Main {
  fun render : String {
    if (let T::B(a) = T::B(0)) {
      a
    } else {
      "b"
    }
  }
}

