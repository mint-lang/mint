-----------------------------------------------------operation_or_type_mismatch
type Maybe(a) {
  Nothing
  Just(a)
}

component Main {
  fun render : String {
    Maybe.Just(0) or "Hello"
  }
}
-----------------------------------------------operation_or_not_maybe_or_result
type Maybe(a) {
  Nothing
  Just(a)
}

component Main {
  fun render : String {
    0 or "Hello"
  }
}
-------------------------------------------------------operation_pipe_ambiguous
component Main {
  fun toString(value : Number) : String {
    ""
  }

  fun render : String {
    "" + 0 |> toString + "" + 0 |> toString
  }
}
